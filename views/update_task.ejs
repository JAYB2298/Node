<form  method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="task" class="text-light">Enter Task</label>
            <input type="hidden" name="id" value=" <%= tasks._id%>">
            <input type="text" name="task" value="<%= tasks._task%>">  
        </div>
        <div class="form-group">
            <label for="subTask" class="text-light">Enter Sub Task</label>
            <input type="text" name="subTask" value="<%= tasks._subTask %>">  
        </div>
        <div class="form-group">
            <label for="date" class="text-light">Enter Date</label>
            <input type="date" name="date" value="<%= tasks._date%>">  
        </div>
        <div class="form-group">
            <label for="time" class="text-light">Enter Time</label>
            <input type="time" name="time" value="<%= tasks._time %>">  
        </div> 
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Add</button>
        </div>
    </div>
